@page "/Product/DetailsProduct"
@model DetailsProductModel
@{
    var money = LSetting.Mony;
    var image = "";
    var images = Model.Input.DataProduct.Image;
    if (images != null)
    {
        image = "data:image/jpg;base64," + Convert.ToBase64String(images,
0, images.Length);
    }
    else
    {
        image = "/images/images/add_shopping.png";
    }
    var description = Model.Input.DataProduct.Description;
}
<div class="container">
    <h3>@description</h3>
    <div class="row">
        <div class="col-sm ">
            <div class="card text-center" style="width: 21rem;">
                <div class="card-header ">
                    <img class='imageUserDetails' src="@image" />
                </div>
                <div class="card-body">
                    <div class="col-md-10">
                        <div class="row">
                            <p> @description</p>
                        </div>
                        <div class="row">
                            <p class="text-success">@String.Format(money + "{0:#,###,###,##0.00####}", Model.Input.DataProduct.Price)</p>
                        </div>
                        <div class="row">
                            <a asp-area="Product" asp-page="UpdateProduct" asp-route-id="@Model.Input.DataProduct.IdProduct" class="btn btn-info ">
                                Update
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-sm">
            <div class="card">
                <div class="card-body">
                    <table>
                        <tbody>
                            <tr>
                                <th>
                                    Informacion
                                </th>
                            </tr>
                            <tr>
                                <th>
                                    Description
                                </th>
                            </tr>
                            <tr>
                                <td>
                                    <p>@description</p>
                                </td>
                            </tr>
                            <tr>
                                <th>
                                    Precio
                                </th>
                            </tr>
                            <tr>
                                <td>
                                    <p class="text-success">@String.Format(money + "{0:#,###,###,##0.00####}", Model.Input.DataProduct.Price)</p>
                                </td>
                            </tr>
                            <tr>
                                <th>
                                    Departamento
                                </th>
                            </tr>
                            <tr>
                                <td>
                                    <p>@Model.Input.DataProduct.Department</p>
                                </td>
                            </tr>
                            <tr>
                                <th>
                                    Categoria
                                </th>
                            </tr>
                            <tr>
                                <td>
                                    <p>@Model.Input.DataProduct.Categories</p>
                                </td>
                            </tr>
                            <tr>
                                <th>
                                    Fecha
                                </th>
                            </tr>
                            <tr>
                                <td>
                                    <p>@Model.Input.DataProduct.Date.ToString("dd/MMM/yyy")</p>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
